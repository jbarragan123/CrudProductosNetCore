@model crud_productos.Models.ViewModels.ProductoVm;
@{
    ViewData["Title"] = "Producto_Detalle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (Model.oProducto.Id == 0)
{
    <h1>Crear Producto</h1>
}
else
{
    <h1>Editar Producto</h1>
}

<div class="row">
    <div class="col-sm-4">
        <form id="productoForm" asp-action="Producto_Detalle" asp-controller="Home" method="post">
            <input type="hidden" asp-for="oProducto.Id" />

            <div class="mb-2">
                <label class="form-label" asp-for="oProducto.Nombre">Nombre completo</label>
                <input class="form-control form-control-sm" asp-for="oProducto.Nombre" type="text" id="Nombre" />
            </div>

            <div class="mb-2">
                <label class="form-label" asp-for="oProducto.Descripcion">Descripción</label>
                <input class="form-control form-control-sm" asp-for="oProducto.Descripcion" type="text" id="Descripcion" />
            </div>

            <div class="mb-2">
                <label class="form-label" asp-for="oProducto.Precio">Precio</label>
                <input class="form-control form-control-sm" asp-for="oProducto.Precio" type="text" id="Precio" />
            </div>

            <div class="mb-2">
                <label class="form-label" asp-for="oProducto.Stock">Stock</label>
                <input class="form-control form-control-sm" asp-for="oProducto.Stock" type="text" id="Stock" />
            </div>

            <div class="mb-2">
                @if (Model.oProducto.Id == 0)
                {
                    <button class="btn btn-primary btn-sm w-25" type="submit">Crear</button>
                }
                else
                {
                    <button class="btn btn-primary btn-sm w-25" type="submit">Editar</button>
                }
                <a class="btn btn-dark btn-sm" asp-action="Index" asp-controller="Home">Volver</a>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    <script src="~/js/validaciones.js"></script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}